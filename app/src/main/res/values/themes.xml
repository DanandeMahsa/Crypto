<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CryptoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- رنگ‌های اصلی -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/surface_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- رنگ‌های ثانویه -->
        <item name="colorSecondary">@color/primary_teal</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- سطوح و متن -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>

        <!-- نوار وضعیت -->
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>